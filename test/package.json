{
	"private": true,
	"dependencies": {
		"@playwright/test": "^1.40.1",
		"@rollup/plugin-html": "^1.0.3",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@surma/rollup-plugin-off-main-thread": "^2.2.3",
		"@web/rollup-plugin-import-meta-assets": "^2.2.1",
		"html-webpack-plugin": "^5.6.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.10.3",
		"requirejs": "^2.3.6",
		"rollup": "^4.9.1",
		"serve": "^14.2.1",
		"shx": "^0.3.4",
		"wasm-pack": "^0.12.1",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"scripts": {
		"postinstall": "playwright install --with-deps chromium firefox",
		"prebuild:bundler": "wasm-pack build --target web --out-name test --out-dir out/bundler-base/pkg && shx cp index.* out/bundler-base",
		"build:bundler:webpack": "webpack",
		"build:bundler:rollup": "rollup -c",
		"build:bundler:parcel": "parcel build out/bundler-base/index.html --dist-dir out/parcel --public-url . --no-optimize",
		"build:bundler": "run-p build:bundler:*",
		"build:no-bundler": "wasm-pack build --target web --out-name test --out-dir out/no-bundler/pkg -- --features rayon-on-worker/no-bundler && shx cp index.* out/no-bundler",
		"pretest": "run-p build:bundler build:no-bundler",
		"test": "playwright test"
	}
}
